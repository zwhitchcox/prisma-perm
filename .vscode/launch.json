{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/${relativeFile}",
            "skipFiles": [
                "<node_internals>/**/*.js",
                // "${workspaceRoot}/node_modules/**/*.js",
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ]
        },
        {
            "name": "Generate",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/generate-cli.ts",
            "cwd": "${workspaceRoot}/test/user",

            "env": {
                "FORCE_COLOR": "1"
            },
            "skipFiles": [
                "<node_internals>/**/*.js",
                // "${workspaceRoot}/node_modules/**/*.js",
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ]
        },
        {
            "name": "User",
            "type": "node",
            "request": "launch",
            "args": ["./test/user/random.test.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "env": {
                "DEBUG": "*"
            },
            "sourceMaps": true,
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "User Compiled",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/test/user/random.test.ts",
            "env": {
                "FORCE_COLOR": "1"
            },
            "skipFiles": [
                "<node_internals>/**/*.js",
                // "${workspaceRoot}/node_modules/**/*.js",
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ]
        }
    ]
}