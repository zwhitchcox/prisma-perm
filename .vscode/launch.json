{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Social Network Server",
            "type": "node",
            "request": "launch",
            "args": ["./examples/social-network/server/server.ts"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "User",
            "type": "node",
            "request": "launch",
            "args": ["./test/user/random.test.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "env": {
                "DEBUG": "*"
            },
            "sourceMaps": true,
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "User Compiled",
            "type": "node",
            "request": "launch",
            "args": ["./dist/test/user/random.test.js"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}