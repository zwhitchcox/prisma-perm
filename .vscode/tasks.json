{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate User Test Properties",
      "type": "shell",
      "command": "ts-node ${workspaceRoot}/generate-cli.ts",
      "options": {
        "cwd": "${workspaceRoot}/test/user"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "User Test Deploy",
      "type": "shell",
      "command": "ts-node ${workspaceRoot}/test/user/scripts/scripts.ts deploy",
      "options": {
        "cwd": "${workspaceRoot}/test/user",
        "env": {
          "PRISMA_MANAGEMENT_API_SECRET": "my-secret"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    },
    {
      "label": "User Test Prisma Deploy",
      "type": "shell",
      "command": "prisma deploy",
      "options": {
        "cwd": "${workspaceRoot}/test/user",
        "env": {
          "PRISMA_MANAGEMENT_API_SECRET": "my-secret"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    },
    {
      "label": "Start Docker and Prisma User Test",
      "type": "shell",
      "command": "docker-machine start; docker-compose up -d",
      "options": {
        "cwd": "${workspaceRoot}/test/user/prisma"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    }
  ]
}