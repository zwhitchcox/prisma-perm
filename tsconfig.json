{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "files": [
    "index",
    "generate-cli"
  ],
  "exclude": [
    "node_modules"
  ]
}
