{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ]
  },
  "files": [
    "index",
    "cli",
    "./test/user/random.test.ts",
    "./test/user/scripts/scripts.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
